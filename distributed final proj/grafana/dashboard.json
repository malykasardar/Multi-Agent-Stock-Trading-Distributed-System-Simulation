{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.5.0"
    },
    {
      "type": "panel",
      "id": "graph",
      "name": "Graph",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    },
    {
      "type": "panel",
      "id": "piechart",
      "name": "Pie chart",
      "version": ""
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "id": 1,
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 0 },
      "type": "graph",
      "title": "Lamport Clock Synchronization",
      "description": "Shows the progression of logical time across all nodes. Jumps indicate clock synchronization upon message receipt.",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "lamport_timestamp",
          "legendFormat": "{{node_id}}",
          "refId": "A"
        }
      ],
      "legend": { "show": true, "alignAsTable": true, "values": true, "min": true, "max": true, "avg": true, "total": false },
      "yaxis": { "label": "Logical Time" },
      "xaxis": { "show": true }
    },
    {
      "id": 2,
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "type": "stat",
      "title": "Node Status",
      "description": "Current liveness status of all nodes. 1 = UP, 0 = FAILED.",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "node_status",
          "legendFormat": "{{node_id}}",
          "refId": "A"
        }
      ],
      "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
      "orientation": "auto",
      "colorMode": "value",
      "mappings": [
        { "type": "value", "value": "1", "text": "UP" },
        { "type": "value", "value": "0", "text": "FAILED" }
      ],
      "thresholds": [
        { "value": 0.5, "color": "red" },
        { "value": 1, "color": "green" }
      ]
    },
    {
      "id": 3,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "type": "graph",
      "title": "Trade Throughput",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "rate(trade_count_total[30s])",
          "legendFormat": "{{order_type}}",
          "refId": "A"
        }
      ],
      "yaxis": { "label": "Trades / Second" }
    },
    {
      "id": 4,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "type": "piechart",
      "title": "BUY vs. SELL Order Distribution",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "sum(increase(trade_count_total[5m])) by (order_type)",
          "legendFormat": "{{order_type}}",
          "refId": "A"
        }
      ],
      "reduceOptions": { "values": true, "calcs": ["sum"], "fields": "" },
      "displayLabels": ["name", "percent"],
      "legend": { "show": true, "displayMode": "list" }
    },
    {
      "id": 5,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "type": "graph",
      "title": "Heartbeat Frequency by Agent",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "rate(heartbeat_count_total[30s])",
          "legendFormat": "{{agent_id}}",
          "refId": "A"
        }
      ],
      "yaxis": { "label": "Heartbeats / Second" }
    },
    {
      "id": 6,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "type": "stat",
      "title": "Agent Failures Detected",
      "description": "Total count of agent failures detected by the MarketNode's heartbeat monitor.",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "sum(increase(failure_detected_total[5m]))",
          "legendFormat": "Detected Failures",
          "refId": "A"
        }
      ],
      "reduceOptions": { "values": false, "calcs": ["sum"], "fields": "" },
      "colorMode": "none"
    }
  ],
  "schemaVersion": 36,
  "style": "dark",
  "tags": [],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h",
      "2h",
      "1d"
    ]
  },
  "timezone": "browser",
  "title": "Distributed Stock Trading Simulation",
  "uid": "dist-stock-sim",
  "version": 1,
  "weekStart": ""
}
